@model IEnumerable<nJoyIt.Models.Book>

@{
    ViewData["Title"] = "Books";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Books list</h2>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <div class="col-6 text-right">
                <a class="btn btn-primary" asp-action="Save">Add new book</a>
            </div>
        }

        @if (Model.Count() > 0)
        {
            <div class="col-12">
                <ul class="books-list">
                    @foreach (var book in Model)
                    {
                        <li class="book">
                            <div>
                                <a asp-action="Edit" asp-route-id="@book.Id">Edit</a>
                            </div>
                            <a asp-action="Info" asp-route-id="@book.Id">
                                <div class="d-flex book-wrapper">
                                    <div>
                                        <img src="@book.BookImageUrl" alt="@book.Author - @book.Title"/>
                                    </div>
                                    <div>
                                        <div>
                                            <span class="book-label">Title</span>
                                            <span class="book-info">@book.Title</span>
                                        </div>
                                        <div>
                                            <span class="book-label">Author</span>
                                            <span class="book-info">@book.Author</span>
                                        </div>
                                        <div>
                                            <span class="book-label">Genre</span>
                                            <span class="book-info">@book.Genre</span>
                                        </div>
                                        <div>
                                            <span class="book-label">Publication year</span>
                                            <span class="book-info">@book.PublicationYear</span>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </div>
</div>