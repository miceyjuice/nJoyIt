@model Login

@{
    ViewBag.Title = "Login";
}
<div class="form-login-container mt-4">
    <h1 class="mb-5">Login</h1>
    <form asp-antiforgery="true" asp-action="Login" method="post">
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control custom-text-input" />
        </div>
        <div class="mt-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control custom-text-input" />
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="submit" class="btn btn-primary text-white px-4" style="height: fit-content">Login</button>
            <p class="mt-3">No account? <a asp-action="Register">Register</a></p>
        </div>
    </form>
</div>
