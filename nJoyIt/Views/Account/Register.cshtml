@model Register

@{
    ViewBag.Title = "Register";
}
<div class="form-login-container mt-4">
    <h1 class="mb-5">Register</h1>
    <form asp-antiforgery="true" asp-action="Register" method="post">
        <div>
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control custom-text-input" />
            <div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-3">
            <label asp-for="Password"></label>
            <input type="password" asp-for="Password" class="form-control custom-text-input" />
            <div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-3">
            <label asp-for="ConfirmPassword"></label>
            <input type="password" asp-for="ConfirmPassword" class="form-control custom-text-input" />
            <div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="d-flex justify-content-between align-items-center mt-4">
            <button type="submit" class="btn btn-primary text-white px-4">Sign up</button>
            <p class="mt-3">Already have an account? <a asp-action="Login">Login</a></p>
        </div>
    </form>
</div>

@section Scripts
{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
